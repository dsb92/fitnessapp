extends layout

block content
    h1=title
    
    form.form-horizontal(method="post",action="/workout/#{workoutid}/newworkout")
        .form-group
            label.col-sm-2.control-label(for='inputName') Øvelse
                
            .col-sm-10
            input#inputName.form-control(type='text', placeholder='navn på øvelse', name='name')
            
        .form-group
            label.col-sm-2.control-label(for='inputDesc') Beskrivelse
                
            .col-sm-10
            input#inputDesc.form-control(type='text', placeholder='beskrivelse', name='desc')
            
        .form-group
            label.col-sm-2.control-label(for='inputSet') Set
                
            .col-sm-10
            input#inputSet.form-control(type='text', placeholder='set', name='set')
        
        .form-group
            label.col-sm-2.control-label(for='inputRepeat') Gentagelser/tid
                
            .col-sm-10
            input#inputRepeat.form-control(type='text', placeholder='gentagelser/tid', name='settime')
           
        .form-group
            .col-sm-offset-2.col-sm-10
            button.btn.btn-default(type='submit') Tilføj


    


    
